@import 'nib'
@import 'normalize'
@import 'fuentes'
@import url(http://fonts.googleapis.com/css?family=Lato:100,300,900);

vendor-prefixes = webkit moz o ms official

body
	color #333
	font-family 'Lato', sans-serif
	font-size 16px
	font-weight 100
	margin 0
form
	margin 0 auto
	width 92%
header
	background-color #333
	background-image url(../img/fondo.png)
	height 3.4em
	margin 0 auto
	width 100%
	figure
		display inline-block
		margin 0
		width 200px
		img
			margin 0.2em 1em
			width 111px
h2
	font-size 20px
	margin .6em
	span
		font-size 12px
		font-weight 100
		margin-left .5em
h3
	color #666
	font-size 11px
	font-weight 100
	margin 1em 5% 2em
h4
	font-weight 100
	margin 0 .6em 0
h5
	margin 0 0 .6em 1.5em
	div
		display inline-block
		margin 3%
		width 1px
		padding 0
		p
			text-align center
			font-size 20px
			margin 0 0 0 -3px
			padding 0
			input
				padding 0
			&.valor
				font-size 10px
				font-weight 100
				margin-left 1px
		&:last-child
			p
				margin 0
input[type="radio"]
	background-color #fff
input[type="submit"]
	background-color #fff
	border 1px solid #eee
	border-radius 4px
	box-shadow inset 0 1px 1px rgba(0,0,0,.075)
	color #333
	display inline-block
	font-size 12px
	line-height 1.42em
	margin 1em 5%
	padding .5em 1em
	text-align center
	text-decoration none
	width 90%
	&:hover
		background-color #eee
		border-color #ccc

textarea
	background-color #fff
	border 1px solid #eee
	border-radius 4px
	color #555
	font-size 12px
	font-weight 100
	height 5em
	margin .5em 5%
	resize vertical
	width 90%

#mensaje
	border 1px solid transparent
	border-left-width 2px
	border-radius 2px
	display block
	height auto
	margin 1em 5%
	width 90%
	h4
		font-size 12px
		line-height 1em
		margin 1em
		font-weight 900
	p
		font-size 11px
		line-height 1em
		margin 1em

	&.error
		background-color #fdf7f7
		border-color #f4dada
		border-left-color #d9534f
		h4
			color #d9534f
	&.exito
		background-color #dff0d8
		border-color #d6e9c6
		border-left-color #468847