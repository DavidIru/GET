#pedido
	h2
		border-bottom 1px solid #2f2f2f
		color #222
	#pedidodatos
		color #444
		h2
			span
				float right
				font-weight 100
		h3
			display inline-block
			font-size 26px
			margin .4em 0 .4em 5%
			width 59%

		h4
			display inline-block
			font-size 16px
			margin 0.3em 0 .3em 5%
			width 50%
			span
				font-size 12px
				font-weight 100
				margin-right .5em
				vertical-align middle
		p
			display inline-block
			font-size 14px
			text-align center
			vertical-align middle
			width 29%
		#cuando
			background-color #fffaf4
			border 1px solid #f3e0c7
			border-radius 3px
			display inline-block
			margin .4em 0 0 5%
			vertical-align top
			width 35%
			h4
				display block
				font-size 8px
				font-weight 900
				margin .4em 0
				text-align center
				text-transform uppercase
				width auto
			p
				font-size 11px
				margin .2em
				width 42%
				&.unico
					margin-bottom .6em
					text-align center
					width 90%
			a
				background-color #fff
				border 1px solid #eee
				border-radius 2px
				color #333
				display block
				font-size 12px
				margin .4em
				padding .3em
				text-align center
				text-decoration none
				&:hover
					background-color #eee
					border-color #ccc
	#pedidodetalle
		h3
			font-size 13px
			font-weight 100
			margin .4em 5% .4em 5%
	#pedidoenvio
		h3
		h4
			display inline-block
			font-size 13px
			font-weight 100
			margin .4em 5% .4em 5%
		h3
			width 90%
		h4
			margin-right 0
			width auto
		#cuadro
			background-color #eee
			border 1px solid #999
			border-radius 5px
			margin 1em auto
			padding .3em
			width 90%
			#mapa
				border 1px solid #999
				border-radius 5px
				height 10em
				width 100%

