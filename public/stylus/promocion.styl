#promocion
	h2
		border-bottom 1px solid #2f2f2f
		color #222	
	#promomail
	#promosms
		form
			margin 1em 5%
			input
				background-color #fff
				border 1px solid #ccc
				border-radius 4px
				box-shadow inset 0 1px 1px rgba(0,0,0,.075)
				color #555
				display inline-block
				font-size 12px
				line-height 1.42em
				margin 0 0 1em 2em
				padding .5em 1em
				width 12.5em
			input[type="submit"]
				border 1px solid #eee
				color #333
				display block
				margin 1em 40%
				text-align center
				text-decoration none
				width auto
				&:hover
					background-color #eee
					border-color #ccc
			label
				display block
				font-size 12px
				font-weight 900
				margin .3em .2em
		p
			color #666
			font-size 11px
			margin 1em 5%
	#promomail
		#botones
			margin 0 auto
			width 90%
			a
				background-color #f4f4f4
				border 1px solid #ccc
				border-radius 4px
				color #333
				display inline-block
				font-size 10px
				margin .2em
				padding .6em
				text-decoration none
				&:hover
					background-color #e0e0e0
	#promosms
		form
			input[type="submit"]
				float right
				margin 0 5%
				&:hover
					background-color #eee
					border-color #ccc
			textarea
				background-color #fff
				border 1px solid #eee
				border-radius 4px
				box-shadow inset 0 1px 1px rgba(0,0,0,.075)
				color #555
				display inline-block
				font-size 12px
				height 4em
				line-height 1.42em
				margin 0 2%
				padding .5em 1em
				resize vertical
				width 90%
		.notificacion
			background-color #fdf7f7
			border-color #d9534f
		.restantes
			display inline-block
			font-size 10px
			margin-left 5%
