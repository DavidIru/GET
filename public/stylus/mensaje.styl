#mensajeauto
	h2
		border-bottom 1px solid #2f2f2f
		color #222
	#mensajeautocambios0
		form
			margin 1em 5%
			input[type="submit"]
			textarea
				background-color #fff
				border 1px solid #eee
				border-radius 4px
				box-shadow inset 0 1px 1px rgba(0,0,0,.075)
				display inline-block
				font-size 12px
				line-height 1.42em
				padding .5em 1em
			input[type="submit"]
				color #333
				float right
				margin-right 5%
				text-align center
				text-decoration none
				width auto
				&:hover
					background-color #eee
					border-color #ccc
			label
				display block
				font-size 12px
				font-weight 900
				margin .3em .2em
			textarea
				color #555
				height 4em
				margin 0 2%
				resize vertical
				width 90%
		p
			color #666
			font-size 11px
			margin 1em 5%
		#botones
			margin 0 auto
			width 90%
			a
				background-color #f4f4f4
				border 1px solid #ccc
				border-radius 4px
				color #333
				display inline-block
				font-size 10px
				margin .2em
				padding .6em
				text-decoration none
				&:hover
					background-color #e0e0e0	
		.notificacion
			background-color #fdf7f7
			border-color #d9534f
		.restantes
			display inline-block
			font-size 10px
	#mensajeautodatos
		color #444
		h3
		h4
			font-size 14px
			font-weight 100
		h3
			margin .4em 5% .4em 5%
		h4
			display inline-block
			margin .4em 12% .4em 5%
			width 32%
			&:firstchild()
				margin .4em 5% .4em 12%


