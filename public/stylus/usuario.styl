#usuario
	h2
		border-bottom 1px solid #2f2f2f
		color #222	
	#usuarioadd
	#usuariocambios1
	#usuariocambios2
	#usuariocambios3
		form
			margin 1em 5%
			input
			select
				background-color #fff
				border 1px solid #ccc
				border-radius 4px
				box-shadow inset 0 1px 1px rgba(0,0,0,.075)
				color #555
				display inline-block
				font-size 12px
				line-height 1.42em
				margin 0 0 1em 2em
				padding .5em 1em
				width 12.5em
			input[type="submit"]
				background-color #fff
				border 1px solid #eee
				color #333
				margin 0
				text-align center
				text-decoration none
				width auto
				&:hover
					background-color #eee
					border-color #ccc
			label
				display block
				font-size 12px
				font-weight 900
				margin .3em .2em
			select
				height 2.42em
				width 14.5em
		p
			color #666
			font-size 11px
			margin 1em 5%
		#mensaje
			border 1px solid transparent
			border-left-width 2px
			border-radius 2px
			display block
			height auto
			margin 1em 5%
			width 90%
			p
				font-size 11px
				line-height 1em
				margin 1em
			&.error
				background-color #fdf7f7
				border-color #f4dada
				border-left-color #d9534f
			&.exito
				background-color #dff0d8
				border-color #d6e9c6
				border-left-color #468847	
	#usuarioadd
	#usuariocambios3
		h3
			display inline-block
			font-size 10px
			font-weight 100
			margin 0
			vertical-align top
			width 70%
			#barra
				background-color #eee
				height 5px
				margin .6em 5%
				width 90%
				#relleno
					height 5px
					&.rojo
						background-color #ff5656
					&.naranja
						background-color #ffad56
					&.amarillo
						background-color #fff956
					&.verde
						background-color #a6ff56
					
					
		input[type="password"]
			margin 0 0 1em
			width 40%
	#usuarioadd
		form
			div
				input
					width 18em
				select
					width 20em
			input[type="submit"]
				display block
				margin 1em 5%
				width 90%
	#usuariodatos
		color #444
		h3
		h4
			font-size 14px
			font-weight 100
		h3
			margin .4em 5% .4em 5%
		h4
			display inline-block
			margin .4em 12% .4em 5%
			width 32%
			&:firstchild()
				margin .4em 5% .4em 12%
	#usuarioeliminar
		h2
			span
				text-shadow: 0 0 0 rgba(0, 0, 0, 1);
		p
			color #666
			font-size 11px
			margin 1em 5%
		form
			margin 1em 5%
			input[type="submit"]
				background-color #d9534f
				border 1px solid #d43f3a
				border-radius 4px
				color #fff
				display block
				margin 1em 0
				padding .5em 0
				text-align center
				text-decoration none
				width 100%
				&:hover
					background-color #b7332a



